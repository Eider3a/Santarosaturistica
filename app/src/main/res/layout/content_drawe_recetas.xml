<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.eider.santarosaturistica.DraweRecetasActivity"
    tools:showIn="@layout/app_bar_drawe_recetas">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/trecetastitulo"
            android:text="Funcionando"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/irecetasimagen"
            android:src="@drawable/restaurante"
            android:layout_width="230dp"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/trecetasreceta"
            android:text="Funcionando"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>


    <!--Este siempre va, es obligatorio-->
    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</android.support.constraint.ConstraintLayout>
